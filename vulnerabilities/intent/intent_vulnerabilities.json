            "id": "INTENT-001",
            "name": "Intent Data Injection",
            "description": "Application processes intent data without proper validation, allowing injection of malicious data through intent extras.",
            "severity": {
                "level": "High",
                "impact": "Data manipulation, component hijacking, and security bypass",
                "exploitability": "Medium"
            },
            "detection": {
                "pattern": [
                    "getStringExtra\\([^)]+\\)",
                    "getBundleExtra\\([^)]+\\)",
                    "getParcelableExtra\\([^)]+\\)",
                    "(?<!validate)getIntent\\(\\)\\.get"
